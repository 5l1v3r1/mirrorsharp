{
    "root": true,
    "plugins": [
        "es"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:es/no-2015"
    ],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "amd": true,
        "es6": true
    },
    "rules": {
        "es/no-block-scoped-variables": "off",
        "es/no-promise": "off",
        "es/no-for-of-loops": "off",
        "no-restricted-syntax": ["error", "VariableDeclaration[kind='let']"]
    }
}